<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_view_tree_catalog" model="ir.ui.view">
        <field name="name">product.view.tree.catalog</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <list string="Products" editable="bottom" default_order="default_code asc" js_class="product_tree_catalog">
                <header>
                    <button name="action_add_products_to_order" type="object" string="Add" class="oe_highlight"
                            icon="fa-shopping-cart"/>
                    <button name="action_remove_products_from_order" type="object" string="Remove"
                            icon="fa-trash" class="oe_highlight"/>
                </header>
                <field name="name"/>
                <field name="default_code"/>
                <field name="list_price"/>
                <field name="categ_id"/>
                <field name="is_in_order" invisible="1" optional="hide"/>
                <button name="action_add_qty" type="object" title="plus" icon="fa-plus" class="oe_highlight"
                        invisible=" not is_in_order"/>
                <field name="product_so_qty" invisible=" not is_in_order"/>
                <button name="action_sub_qty" type="object"  title="minus" icon="fa-minus" class="oe_highlight"
                        invisible=" not is_in_order"/>
                <button name="action_remove_product_from_order" type="object" string="Remove"
                        icon="fa-trash" class="oe_highlight" invisible=" not is_in_order"/>
                <button name="action_add_product_to_order" type="object" string="Add" class="oe_highlight"
                        icon="fa-shopping-cart" invisible=" is_in_order"/>
            </list>
        </field>
    </record>
</odoo>

