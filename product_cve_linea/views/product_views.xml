<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit the product template form to add CVE-Linea field -->
    <record id="view_product_template_form_inherit_cve_linea" model="ir.ui.view">
        <field name="name">product.template.form.cve.linea</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//group" position="inside">
                <group string="CVE">
                    <field name="x_cve_linea_id" options="{'no_create_edit': False}"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
