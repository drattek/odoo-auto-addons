<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-inherit="point_of_sale.ProductCard" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('product-information-tag')]" position="after">
            <t t-if='props.product.sh_is_common_product'>
                <div class="sh_common_product_tag_box">
                    <span class="common_product_tag">Common</span>
                </div>
            </t>
        </xpath>
        <xpath expr="//div[hasclass('product-content')]" position='inside'>
            <t t-if=' props.product.motorcycle_ids.length > 0'>
                <div class="product-image-icon sh_is_enlarge" >
                    <i t-on-click="(event) => this.ClickOnDetails(event,props.product)" class="fa fa-building-o " aria-hidden="true"></i>
                </div>
            </t>
        </xpath>
    </t>
</templates>
