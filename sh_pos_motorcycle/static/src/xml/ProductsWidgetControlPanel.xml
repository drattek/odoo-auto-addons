<templates id="template" xml:space="preserve">

    <t t-name="shProductScreen" t-inherit="point_of_sale.ProductScreen" t-inherit-mode="extension">
        <!-- <xpath expr='//div[hasclass("products-widget-control")]' position="attributes">
            <attribute name="t-attf-class">{{ pos.config.enable_search  ? 'sh_products_widget_control' : ''
        }}</attribute>
        </xpath> -->
        <xpath expr='//CategorySelector' position='before'>
        <div class=" d-grid sh_main_div_motorcycle">
            <div class="sh_motorcycle_search d-flex">
                <t t-if='pos.config.enable_search'>
                    <div class='custom-search-bar search-box type-search sh_search_box'>
                        <span class="icon">
                            <i class="fa fa-search"></i>
                        </span>
                        <input list="motorcycle_types" name='motorcycle_type_name' id='motorcycle_type' placeholder="Search Type..." t-on-change="(ev) => this.SearchMotorcycleType(ev)" t-att-class="{'disabled': this.sh_state.sh_enable_search_type}" />
                        <datalist id='motorcycle_types' >
                            <t t-foreach="sh_types" t-as="type" t-key="type.id">
                                <option t-att-value="type.name" t-att-data-id="type.id"></option>
                            </t>
                        </datalist>
                        <span t-on-click="clearType_search" class="clear-icon">
                            <i class="fa fa-times" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="search-box make-search sh_search_box">
                        <span class="icon">
                            <i class="fa fa-search"></i>
                        </span>
                        <input list="motorcycle_makes" name='motorcycle_make' id='motorcycle_make' placeholder="Search Make..." t-on-change='(ev) => this.SearchMotorcycleMake(ev)' t-att-disabled="this.sh_state.sh_enable_search_make" t-att-class="{'disabled': this.sh_state.sh_enable_search_make}"  />
                        <datalist id='motorcycle_makes'>
                            <t t-foreach="sh_makes" t-as="make" t-key="make.id">
                                <option t-att-value="make.name" t-att-data-id="make.id"></option>
                            </t>
                        </datalist>
                        <span t-on-click="clear_make_search" class="clear-icon">
                            <i class="fa fa-times" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="search-box sh_search_box">
                        <span class="icon">
                            <i class="fa fa-search"></i>
                        </span>
                        <input list="motorcycle_models" name='motorcycle_model' id='motorcycle_model' placeholder="Search model..." t-on-change='(ev) => this.SearchMotorcycleModel(ev)'  t-att-disabled="this.sh_state.sh_enable_search_model" t-att-class="{'disabled': this.sh_state.sh_enable_search_model}" />
                        <t t-if='sh_motorcycle_mmodel and sh_motorcycle_mmodel.length ' >
                            <datalist id='motorcycle_models' >
                                <t t-foreach="sh_motorcycle_mmodel" t-as="model" t-key="model.id">
                                    <option t-att-value="model.name" t-att-data-id="model.id"></option>
                                </t>
                            </datalist>
                        </t>
                        <span t-on-click="clearModelSearch" class="clear-icon">
                            <i class="fa fa-times" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="search-box sh_search_box">
                        <span class="icon">
                            <i class="fa fa-search"></i>
                        </span>
                        <input list="motorcycle_years" name='motorcycle_year' id='motorcycle_year' placeholder="Search year..." t-on-change='(ev) => this.SearchMotorcycleyear(ev)' t-att-disabled="this.sh_state.sh_enable_search_year" t-att-class="{'disabled': this.sh_state.sh_enable_search_year}" />
                        <datalist id='motorcycle_years'>
                            <t t-foreach="sh_motorcycle_year" t-as="year" t-key="year.id">
                                <option t-att-value="year.name" t-att-data-id="year.id"></option>
                            </t>
                        </datalist>
                        <span t-on-click="clearYearSearch" class="clear-icon">
                            <i class="fa fa-times" aria-hidden="true"></i>
                        </span>
                    </div>
                </t>
            </div>
</div>
        </xpath>
    </t>
</templates>